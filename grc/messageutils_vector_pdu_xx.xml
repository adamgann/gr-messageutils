<?xml version="1.0"?>
<block>
  <name>Vector PDU</name>
  <key>messageutils_vector_pdu_xx</key>
  <category>Message Utils</category>
  <import>import messageutils</import>
  <make>messageutils.vector_pdu_source_$(type)($vector, $period, $tag_output, $debug)</make>

  <callback>set_period($period)</callback>
  <callback>set_vec($vector)</callback>

  <param>
	<name>Vector</name>
	<key>vector</key>
	<value>(0, 0, 0)</value>
	<type>raw</type>
  </param>

  <param>
    <name>Period (ms)</name>
    <key>period</key>
    <value>1000</value>
    <type>real</type>
  </param>

  <param>
    <name>IO Type</name>
    <key>type</key>
    <value>f</value>
    <type>enum</type>
    <option>
        <name>Float</name>
        <key>f</key>
    </option>
    <option>
        <name>Byte</name>
        <key>b</key>
    </option>
  </param>

  <param>
    <name>Tag Output</name>
    <key>tag_output</key>
    <value>False</value>
    <type>bool</type>  
		    <option>
			    <name>Yes</name>
			    <key>True</key>
		    </option>
		    <option>
			    <name>No</name>
			    <key>False</key>
		    </option>
    </param>


  <param>
    <name>Debug</name>
    <key>debug</key>
    <value>False</value>
    <type>bool</type>  
		    <option>
			    <name>On</name>
			    <key>True</key>
		    </option>
		    <option>
			    <name>Off</name>
			    <key>False</key>
		    </option>
    </param>
    

  <source>
    <name>pdus</name>
    <type>message</type>
  </source>
</block>
